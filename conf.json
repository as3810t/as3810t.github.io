{
	"source": {
		"include": [
			"./README.md",
			"./src/anim.js",
			"./src/draw.js",
			"./src/syntax.js"
		]
	},
	"opts": {
	    "template": "templates/default",
	    "encoding": "utf8",
	    "destination": "./out/",
	    "recurse": true,
	    "tutorials": "./tutorials"
	},
    "plugins": [
    	"plugins/markdown",
    	"plugins/summarize"
	],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false
    }
}
